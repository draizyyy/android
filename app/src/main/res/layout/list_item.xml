<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="15dp">


        <LinearLayout
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/public_ico"
                    android:layout_width="35dp"
                    android:layout_height="35dp"

                    android:layout_gravity="center_vertical"
                    android:background="@drawable/_523" />
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:id="@+id/public_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        tools:text="%пабликнейм%"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:id="@+id/post_time"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        tools:text="%время публикации%"
                        android:textSize="12sp"
                        android:textColor="@color/text_on_button"
                        />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:paddingRight="10dp"
                android:id="@+id/post_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Университетский лицей № 1511 Предуниверситария НИЯУ «МИФИ» — структурное подразделение со статусом школы при МИФИ на юге Москвы. Свою историю лицей начинает с 1982 года, когда при содействии Московского инженерно-физического института была образована ФМШ № 542."
                tools:ignore="RtlHardcoded" />
            <ImageView
                android:id="@+id/post_photo"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:scaleType="centerInside"
                android:layout_marginTop="5dp"
                tools:background="@drawable/_523"

                android:layout_gravity="center_horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="8dp" >
                <!--                android:layout_marginTop="0dp"-->
                <LinearLayout
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:backgroundTint="@color/button"
                    android:background="@drawable/layout_circle_style"
                    >

                    <ImageView
                        android:id="@+id/likePhoto"
                        android:layout_marginTop="1dp"
                        android:layout_width="21dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/like_not_pressed"
                        />

                    <TextView
                        android:id="@+id/post_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/text_on_button"
                        android:textSize="13sp"
                        tools:text="635" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/comments"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:backgroundTint="@color/button"
                    android:background="@drawable/layout_circle_style"
                    >

                    <ImageView
                        android:id="@+id/commentPhoto"
                        android:layout_marginTop="1dp"
                        android:layout_width="21dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/comment"
                        />

                    <TextView
                        android:id="@+id/post_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="13sp"
                        tools:text="635"
                        android:textColor="@color/text_on_button"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/reposts"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:backgroundTint="@color/button"
                    android:background="@drawable/layout_circle_style"
                    >

                    <ImageView
                        android:id="@+id/repostPhoto"
                        android:layout_width="21dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/repost"
                        />

                    <TextView

                        android:id="@+id/post_reposts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="13sp"
                        tools:text="635"
                        android:textColor="@color/text_on_button"
                        />
                </LinearLayout>


                <!--                    <ImageView-->
                <!--                        tools:background="@drawable/like"-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:layout_gravity="end"-->
                <!--                        >-->
                <!--                    </ImageView>-->
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
